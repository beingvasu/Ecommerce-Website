<% layout('./layouts/boilerPlate') %>

<style>
  html, body {
    margin: 0;
    padding: 0;
    background-color: #313131;
    font-family: Arial, sans-serif;
}

body {
    padding-top: 60px;
}

header {
    background-color: #212121;
    border-bottom: 2px solid #FF7F00;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    padding: 10px 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    z-index: 1000;
    height: 50px;
}

#header-img {
    height: 50px;
    width: auto;
}

#nav-bar {
    display: flex;
    gap: 15px;
}

.nav-link {
    color: #FFFFFF;
    text-decoration: none;
    font-size: 16px;
    font-weight: bold;
    padding: 6px 12px;
    transition: all 0.3s ease;
    border-radius: 4px;
}

.nav-link:hover {
    background-color: #FF7F00;
    color: #000000;
    cursor: pointer;
}

.nav-link:active {
    background-color: #FFFFFF;
    color: #FF7F00;
    border: 1px solid #FF7F00;
}

#menu-btn {
    display: none;
    background-color: #FF7F00;
    color: #000000;
    font-size: 18px;
    border: none;
    padding: 10px;
    border-radius: 4px;
    cursor: pointer;
}

@media (max-width: 700px) {
    #menu-btn {
        display: block;
    }

    #nav-bar {
        display: none;
        width: 100%;
        flex-direction: column;
        gap: 8px;
        align-items: flex-start;
        margin-top: 10px;
    }

    #nav-bar.show {
        display: flex;
    }

    .nav-link {
        width: 100%;
        padding: 12px 20px;
    }
}

.container {
    max-width: 600px;
    margin: 40px auto 20px;
    background: #F2E0D0;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 20px 30px;
}

.form-label {
    font-weight: bold;
    margin-bottom: 5px;
}

.form-control {
    border: 1px solid #ddd;
    border-radius: 4px;
    padding: 10px;
    transition: border-color 0.3s;
}

.form-control:focus {
    border-color: #FF7F00;
    outline: none;
    box-shadow: 0 0 5px rgba(255, 127, 0, 0.5);
}

.btn-primary {
    background-color: #FF7F00;
    border: none;
    padding: 10px 15px;
    border-radius: 4px;
    font-size: 16px;
    color: #fff;
    transition: background-color 0.3s;
}

.btn-primary:hover {
    background-color: #FF9F33;
}

.btn-primary:active {
    background-color: #CC6600;
}

.mb-3 {
    margin-bottom: 20px;
}

textarea.form-control {
    resize: vertical;
}

@media (max-width: 768px) {
    .container {
        margin: 80px 15px 20px;
        padding: 15px;
    }

    .btn-primary {
        width: 100%;
    }
}
</style>

<header id="header">
  <a class="navbar-brand" href="/products">
    <img id="header-img" src="https://img.icons8.com/external-flaticons-flat-flat-icons/64/external-graphic-card-gaming-ecommerce-flaticons-flat-flat-icons.png" alt="external-graphic-card-gaming-ecommerce-flaticons-flat-flat-icons"/>  
  </a>

  <button id="menu-btn" aria-label="Toggle navigation">â˜°</button>

  <nav id="nav-bar">
      <a class="nav-link" href="/products">Products</a>
      <a class="nav-link" href="/user/cart"><i class="fa-solid fa-cart-shopping"></i></a>
      <% if (!currentUser) { %>
          <a class="nav-link" href="/login">Login</a>
          <a class="nav-link" href="/register">Sign Up</a>
      <% } else { %>
          <a class="nav-link" href="/logout">Logout</a>
          <% if (currentUser && currentUser.role === 'seller') { %>
              <a class="nav-link" href="/product/new">New Product</a>
          <% } %>
      <% } %>
  </nav>
</header>


<form class="container mt-4 needs-validation" action="/product/<%= selectedProduct._id %>?_method=PATCH" method="POST" novalidate>
  <div class="mb-3">
    <label for="productName" class="form-label">Product Name</label>
    <input type="text" name="name" class="form-control" id="productName" value="<%= selectedProduct.name || '' %>" required>
    <div class="valid-feedback">
      Looks good!
    </div>
    <div class="invalid-feedback">
      Please enter the field.
    </div>
  </div>

  <div class="mb-3">
    <label for="productImg" class="form-label">Image URL</label>
    <input type="url" name="img" class="form-control" id="productImg" value="<%= selectedProduct.img || '' %>" required>
    <div class="valid-feedback">
      Looks good!
    </div>
    <div class="invalid-feedback">
      Please enter the field.
    </div>
  </div>

  <div class="mb-3">
    <label for="productPrice" class="form-label">Price</label>
    <input type="number" name="price" class="form-control" id="productPrice" step="0.01" value="<%= selectedProduct.price || '' %>" required>
    <div class="valid-feedback">
      Looks good!
    </div>
    <div class="invalid-feedback">
      Please enter the field.
    </div>
  </div>

  <div class="mb-3">
    <label for="productDesc" class="form-label">Description</label>
    <textarea name="desc" class="form-control" id="productDesc" rows="3" required><%= selectedProduct.desc || '' %></textarea>
    <div class="valid-feedback">
      Looks good!
    </div>
    <div class="invalid-feedback">
      Please enter the field.
    </div>
  </div>

  <button type="submit" class="btn btn-primary">Edit this product</button>
</form>

<script>
  (() => {
    'use strict';

    const forms = document.querySelectorAll('.needs-validation');

    Array.from(forms).forEach(form => {
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }

        form.classList.add('was-validated');
      }, false);
    });
  })();
</script>