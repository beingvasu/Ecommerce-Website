<% layout('./layouts/boilerPlate') %>

<div class="container-fluid bg-black text-light vh-100 d-flex justify-content-center align-items-center" style="background-color: #313131 !important;">
    <div class="card bg-dark text-light shadow-lg p-4" style="width: 30rem; background-color: #F2E0D0 !important; color: #000 !important;">
        <h1 class="text-center mb-4">Sign Up</h1>
        <form action="/register" method="post">
            <div class="form-group mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Enter username" 
                    style="background-color: #fff !important; color: black !important; border: 1px solid #3a3a3a !important;" required>
            </div>
            <div class="form-group mb-3">
                <label for="email" class="form-label">Email Address</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" 
                    style="background-color: #fff !important; color: black !important; border: 1px solid #3a3a3a !important;" required>
            </div>
            <div class="form-group mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" 
                    style="background-color: #fff !important; color: black !important; border: 1px solid #3a3a3a !important;" required>
            </div>
            <div class="form-group mb-3">
                <label class="form-label">Role</label>
                <div class="form-check">
                    <input type="radio" class="form-check-input" id="buyer" name="role" value="buyer" required>
                    <label for="buyer" class="form-check-label">Buyer</label>
                </div>
                <div class="form-check">
                    <input type="radio" class="form-check-input" id="seller" name="role" value="seller" required>
                    <label for="seller" class="form-check-label">Seller</label>
                </div>
            </div>
            <button type="submit" 
                class="btn w-100" 
                style="background-color: #FF7F00 !important; color: white !important; border: none !important; box-shadow: 0px 4px 6px rgba(0,0,0,0.2) !important;">
                Sign Up
            </button>
            <p class="text-center mt-3 mb-0">
                Already with us? <a href="/login" class="text-warning text-decoration-none">Login</a>
            </p>
        </form>
    </div>
</div>