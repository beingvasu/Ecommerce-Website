<% layout('./layouts/boilerPlate') %>



<body style="background-color: #313131;">
    <div class="container-fluid text-light vh-100 d-flex justify-content-center align-items-center" >
        <div class="card bg-dark text-light shadow-lg p-4" style="width: 30rem; background-color: #F2E0D0 !important; color: black !important;">
            <h1 class="text-center mb-4">Login</h1>
            <form action="/login" method="post">
                <div class="form-group mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control" id="username" name="username" placeholder="Enter username" 
                        style="background-color: #fff; color: #000; border: 1px solid #3a3a3a;" required>
                </div>
                <div class="form-group mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" 
                        style="background-color: #fff; color: #000; border: 1px solid #3a3a3a;" required>
                </div>
                <button type="submit" 
                    class="btn w-100" 
                    style="background-color: #FF7F00; color: white; border: none; box-shadow: 0px 4px 6px rgba(0,0,0,0.2);">
                    Login
                </button>
                <p class="text-center mt-3 mb-0">
                    Can't log in? <a href="/register" class="text-warning text-decoration-none">Sign up</a>
                </p>
            </form>
        </div>
    </div>
</body>