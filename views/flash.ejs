<% layout('./layouts/boilerPlate') %>

<% if(success && success.length){ %>
  <div class="alert alert-primary" role="alert" style="position: absolute; right: 5px;">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<% if(error && error.length){ %>
  <div class="alert alert-danger" role="alert" style="position: absolute; right: 5px;">
    <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

